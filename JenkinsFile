pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Adisheth/car-rental-website'
            }
        }

        stage('Build') {
            steps {
                echo 'Build completed'
            }
        }

        stage('Test') {
            steps {
                sh '''
                echo "This is a Test" > test-result.txt
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cp test-result.txt /opt/homebrew/var/www/
                '''
            }
        }
    }
}
